<style is:global>
  html {
    pre {
      padding: 1rem 0.5rem;
    }
    code {
      font-weight: bold;
    }
    pre code {
      font-weight: unset;
    }
    --backgroundColor: #021e58;
    --primaryColor: #fbfffe;
    --primaryColorVariant: #ccc9dc;
    --secondaryColor: #06bee1;
    --secondaryColorVariant: #2541b2;
    --errorColor: #f46036;
    background-color: var(--backgroundColor);
    font-family: sans-serif;
  }
  h1,
  h2,
  h3 {
    color: var(--secondaryColor);
  }
  a {
    color: var(--primaryColor);
  }
  p,
  li {
    color: var(--primaryColorVariant);
  }

  pre {
    padding: 1rem 0.5rem;
    border-radius: 5px;
  }
  code {
    font-weight: bold;
  }
  pre code {
    font-weight: unset;
  }

  body {
    margin: 0 auto;
    width: 100%;
    max-width: 80ch;
    padding: 1rem;
    line-height: 1.5;
  }

  * {
    box-sizing: border-box;
  }

  h1 {
    margin: 1rem 0;
    font-size: 2.5rem;
  }

  .nav-links {
    width: 100%;
    top: 5rem;
    left: 48px;

    display: none;
    margin: 0;
  }

  .expanded {
    display: unset;
  }
  .nav-links a {
    display: block;
    text-align: center;
    padding: 10px 0;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .nav-links a:hover,
  .nav-links a:focus {
    background-color: var(--secondaryColor);
    transition: all 0.5s;
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      margin-left: 5em;
      display: block;
      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 15px 20px;
    }

    .hamburger {
      display: none;
    }
  }
</style>
