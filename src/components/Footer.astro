---
import Social from "./Social.astro";
import { Image } from "astro:assets";
import github from "../assets/github.svg";
import linkedin from "../assets/linkedin.svg";
---

<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>
<hr />
<footer>
  <Social platform="github" username="teddiur">
    <Image src={github} alt="github" width="40" height="30" />
  </Social>

  <Social platform="linkedin" username="in/ryaqueiroz">
    <Image src={linkedin} alt="linkedin" width="40" height="30" />
  </Social>
</footer>
