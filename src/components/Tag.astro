---
const { tag } = Astro.props;
---

<a class="tag" href={`/tags/${tag}`}>
  #{tag}
</a>

<style>
  a {
    color: #00539f;
  }

  .tag {
    margin: 0.5em;
    border: solid 1px var(--secondaryColorVariant);
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: var(--secondaryColor);
    color: var(--primaryColor);
    transition: all 0.5s;
    text-transform: capitalize;
  }

  .tag:hover {
    background-color: var(--secondaryColorVariant);
    color: var(--primaryColorVariant);
  }
</style>
